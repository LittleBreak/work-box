{
  "name": "@workbox/plugin-file-explorer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@workbox/plugin-api": "workspace:*"
  },
  "workbox": {
    "name": "File Explorer",
    "description": "文件浏览器插件，提供目录浏览、文件预览、搜索和管理功能",
    "permissions": [
      "fs:read",
      "fs:write"
    ],
    "entry": {
      "main": "./src/index.ts",
      "ui": "./src/ui/FileExplorerPanel.tsx"
    },
    "commands": [
      {
        "id": "open-file-explorer",
        "title": "打开文件浏览器",
        "shortcut": "CmdOrCtrl+Shift+E"
      }
    ],
    "ai": {
      "tools": [
        "read_file",
        "list_directory",
        "search_files"
      ]
    }
  }
}
